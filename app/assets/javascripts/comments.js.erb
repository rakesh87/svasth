jQuery(function() {
  $("#new_comment").on("ajax:success", function(e, data, status, xhr) {
    var comment_data = $.parseJSON(xhr.responseText);
    $('#comment_section').prepend("<p>"+comment_data.comment_body+" - "+comment_data.user_email+"</p>");
  }).on("ajax:complete", function(e, xhr, status, error) {
    $('#comment_body').val('');
    $('#comment_body').focus();
  }).on("ajax:error", function(e, xhr, status, error) {
    alert('Failed to save Comment');
  });
});
